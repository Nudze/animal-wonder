<%- include("../partials/header") %>

<div class="row text-center mx-auto my-4">
    <h1 class="col-12">Add a Animal</h1>

    <form class="col-md-8 col-lg-6 my-3 mx-auto" action="/animals" method="POST">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Name" name="animal[name]">
        </div>
        <div class="form-group">
            <input type="number" class="form-control" placeholder="price" name="price" min="0" step="0.01">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Image URL" name="animal[image]">
        </div>
        <div class="form-group">
            <textarea name="animal[description]" class="form-control" cols="30" rows="10"></textarea>
        </div>
        <button class="btn btn-info btn-large btn-block">Submit</button>
    </form>

    <a class="col-12" href="/animals">Go Back</a>
</div>

<%- include("../partials/footer") %>